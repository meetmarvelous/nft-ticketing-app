# ========================================
# NFT Event Ticketing - Environment Variables
# ========================================
# Copy this file to .env.local and fill in your values

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================

# Sepolia Testnet RPC URL (from Alchemy, Infura, or your preferred provider)
SEPOLIA_RPC_URL=

# Private key for deploying contracts (DO NOT commit real keys!)
# This should be the private key of an account with Sepolia ETH
PRIVATE_KEY=

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# ========================================
# NEXT.JS PUBLIC VARIABLES
# ========================================

# Contract address (will be filled after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS=

# Sepolia Chain ID
NEXT_PUBLIC_CHAIN_ID=11155111

# RPC URL for frontend (can be same as SEPOLIA_RPC_URL)
NEXT_PUBLIC_RPC_URL=

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# ========================================
# OPTIONAL: PRODUCTION SETTINGS
# ========================================

# Application URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000
